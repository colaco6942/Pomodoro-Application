<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#E1DFDF"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--text view for our task name-->
        <TextView
            android:id="@+id/idTodoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Todo Name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!--text view for our task date-->
        <TextView
            android:id="@+id/idTodoDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/idBtnDeleteTodo"
            android:gravity="end"
            android:padding="5dp"
            android:text="Date "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/idTodoTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/idBtnDeleteTodo"
            android:gravity="start"
            android:padding="5dp"
            android:text="Time"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/idBtnDeleteTodo"
            android:layout_width="39dp"
            android:layout_height="37dp"
            android:layout_alignRight="@id/idTodoName"
            android:backgroundTint="#E1DFDF"
            android:src="@drawable/ic_baseline_delete_24"
            app:tint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageButton
            android:id="@+id/idBtnEditTodo"
            android:layout_width="39dp"
            android:layout_height="37dp"
            android:layout_marginLeft="320dp"
            android:backgroundTint="#E1DFDF"
            android:src="@drawable/ic_baseline_edit_24"
            app:tint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageButton
            android:id="@+id/idBtnStartNotification"
            android:layout_width="39dp"
            android:layout_height="37dp"
            android:layout_marginLeft="280dp"
            android:backgroundTint="#E1DFDF"
            android:src="@drawable/ic_baseline_notifications_active_24"
            app:tint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
